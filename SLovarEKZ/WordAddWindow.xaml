<Window x:Class="SLovarEKZ.WordAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLovarEKZ"
        mc:Ignorable="d"
        Title="WordAddWindow" MaxHeight="225" MinHeight="225" MaxWidth="303" MinWidth="303" Height="225" Width="303">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Cancel" Content="Отменить" HorizontalAlignment="Left" Margin="189,157,0,0" VerticalAlignment="Top" Width="88" Click="Cancel_Click"/>
        <Button x:Name="Ok" Content="Подтвердить" HorizontalAlignment="Left" Margin="98,157,0,0" VerticalAlignment="Top" Width="86" Click="Ok_Click"/>
        <TextBox x:Name="WordBoxAdd" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="Введите добавляемое слово" VerticalAlignment="Top" Width="267"/>
        <TextBox x:Name="TranslitionBox" HorizontalAlignment="Left" Margin="10,53,0,0" TextWrapping="Wrap" Text="Введите перевод" VerticalAlignment="Top" Width="267" Height="91"/>

    </Grid>
</Window>
